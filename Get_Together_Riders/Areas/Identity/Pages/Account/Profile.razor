@page "/Profile"
@using Get_Together_Riders.Data;
@inject ApplicationDbContext applicationdbContext;
@using Microsoft.AspNetCore.Identity ;
@using Microsoft.AspNetCore.Identity.UI.Services;
@inject UserManager<IdentityUser> _userManager;
@inject SignInManager<IdentityUser> _signInManager;
@inject IWebHostEnvironment env;

<h3>Register</h3>

<div class="card">
    <div class="card-header">
        <h2>Add Employee</h2>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group" hidden="hidden">
                    <label class="control-label">User ID</label>
                    <input class="form-control " @bind="_user.UserID" />
                </div>
                <div class="form-group">
                    <label class="control-label">User Name </label>
                    <input class="form-control " @bind="_user.UserName" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group ">
                    <label class="control-label">Password</label>
                    <input class="form-control" @bind="_user.Password" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Email </label>
                    <input class="form-control disabled" @bind="_user.Email" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Login User ID </label>
                    <input class="form-control disabled" @bind="_user.LoginUser_ID"/>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Bio </label>
                    <input class="form-control" @bind="_user.Bio" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Phone No </label>
                    <input class="form-control" @bind="_user.PhoneNo" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Bike Model </label>
                    <input class="form-control" @bind="_user.BikeModel" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Location </label>
                    <input class="form-control" @bind="_user.Location" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Emergency Contact Person </label>
                    <input class="form-control" @bind="_user.EmergencyContactPerson" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Emergency Contact Number </label>
                    <input class="form-control" @bind="_user.EmergencyContactNumber" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Rider No </label>
                    <input class="form-control" @bind="_user.RiderNo" />
                </div>
            </div>

            <div class="col-md-4">
                <div class="from-group">
                    <label class="control-label">Status</label>
                    <select class="form-control" @bind="_user.IsActive">
                        <option value="1" selected>Active</option>
                        <option value="0">In Active</option>
                    </select>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control_lable">Select Photo</label>
                    <InputFile OnChange="@OnInputFileChange" multiple/>
                    <table>
                        <tr>
                            @foreach(var imgsrc in ImageUrls)
                            {
                                <td><img src="@imgsrc" /></td>
                            }
                        </tr>
                    </table>
                </div>
            </div>

        </div>
    </div>
    <div class="card-footer">
        <div class="row">
            <div class="col-md-4">
                <input type="button" class="btn btn-primary" @onclick="@SaveUserAsync" value="Save" />
            </div>
        </div>
    </div>
</div>
